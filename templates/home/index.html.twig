{% extends 'home.html.twig' %}

{% block title %}
	Publication des annonces 
{% endblock %}

{% block body %}
    <form action="">
            <div class="row d-flex justify-content-center align-items-center">
        <div class="col-md-3">
            <label class="form-label">Categorie</label>
                <div class="form-group">
                    <select class="form-control" name="categorie_id">
                        <option>Selectionner la categorie</option>
                        {% for cat in categories %}
                            <option value="{{cat.id}}">{{cat.name}}</option>
                        {% endfor %}
                    </select>
                </div>
        </div>
        <div class="col-md-3">
            <label>Recherche ici !!</label>
            <div class="form-group">
                <input class="form-control" name="keyword" placeholder="Search your keyword Here"></input>
            </div>
        </div>
        <div class="col-md-3 mb-2">
            <button type="submit" class="btn  btn-primary">Rechercher</button>
        </div>
    </div>

    </form>	
    <div>
		<div class="row gx-4 gx-lg-5 align-items-center my-5">
            <div class="col-lg-7"><img class="img-fluid rounded mb-4 mb-lg-0" 

                src="{{ asset('uploads/photos/' ~  lastAnnonce.photo ) }}" alt={{ lastAnnonce.title }} /></div>
            <div class="col-lg-5">
                <h1 class="font-weight-light">{{ lastAnnonce.title }}</h1>
                <p>{{
                lastAnnonce.description
                }}</p>
                <a href="{{ path('app_home_show', {'id': lastAnnonce.id ?? 0})}}
                             class="btn btn-primary"

                             >Plus d'informations</a>
                
            </div>
        </div>
        
        <!-- Call to Action-->
        <div class="card text-white bg-secondary my-5 py-4 text-center">
            <div class="card-body"><p class="text-white m-0">
                Vous vous demandez quel est le meilleur site de location saisonni√®re ?
            </p>
            </div>
        </div>
        <!-- Content Row-->
        <div class="row gx-4 gx-lg-5">
            {% for annonce in annonces %}
            <div class="col-md-4 mb-5">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ annonce.title }}</h5>
                            <div >
                                <img class="img-fluid" src="{{ asset('uploads/photos/' ~ annonce.photo ) }}">
                            </div>
                            <p class="card-text">
                                {{ annonce.description }}
                            </p>
                        </div>
                        <div class="card-footer">
                             <a href="{{ path('app_home_show', {'id': annonce.id}) }}"
                             class="btn btn-primary btn-sm"

                             >Plus d'informations</a>
                         
                        </div>
                    </div>
            </div>
             {% endfor %}

        </div>
    </div>

{% endblock %}


